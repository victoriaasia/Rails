
.image
  .image__left-menu
    -#.load_image
    -#  = render 'work/button_load'
    -#  %br
    .select_theme
      = render 'work/button_theme_select', locale: @current_locale
      %br
    -#.select_image
    -#  = render 'work/button_select'
    -#  %br
    .modal_list_results
      = render 'work/button_list_results'
      %br

    %div.common_value
      %span
        = t('.common_value')
      %h2.common{:title => "Common value"}
    %div.total_values
      %span
        = t('.total_values')
      %h2.total{:title => "Total values"} #{@values_qty.round}

  .image__display
    %h2.up-theme{:title => t('.theme_name')}
      #{@selected_theme}

    %h2.up{:title => "Image file name"}
      -##{@selected_image_name}

    .image__wrapper
      .img-left-side
        %h3{:title => "list to previous image"}
          %i.fa.fa-caret-left.strong

          -#%button.button__results.yes{:title => "Save image diag results"}
          -#  %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"} save
          -#%button.button__results.no{:title => "Clear image diag results"}
          -#  %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Clear image diag results"} clear


      .img-center{:title => "Default image"}
        %img{:alt => "Default Image", :src => 'assets/pictures/vietnam.jpg', :title => "Default image",:style => "width:100%; height:100%;" }
        .image_user_value{:title => "Expert value"}

        -#.img-title


      .img-right-side
        %h3{:title => "list to next image"}
          %i.fa.fa.fa-caret-right

    .image__diag
      %div.diag-up
        %span.diag-title{:title => "Value scale"}
          = t(".make_decision")
        -#main var
        %span#chosen-value 50

      #slider
        %input#slide{:max => "100", :min => "10", :value => "50",
                     :onchange => "updateSlider(this.value)",
                     :step => "10", :type => "range"}
      %button.button__results.save{:title => "Save image diag results"}
        %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"}
          = t(".save_decision")
